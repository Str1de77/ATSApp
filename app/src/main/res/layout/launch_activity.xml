<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/launchActivity"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LaunchActivity"
    android:background="@color/blue">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Trucker!"
        app:layout_constraintTop_toTopOf="@+id/launchActivity"
        app:layout_constraintStart_toStartOf="@id/launchActivity"
        app:layout_constraintBottom_toBottomOf="@id/launchActivity"
        app:layout_constraintEnd_toEndOf="@id/launchActivity"
        android:textColor="@color/white"
        android:textSize="20sp"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>